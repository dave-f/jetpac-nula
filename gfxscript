;
; Jetpac graphics script for png2bbc
; 16/07/2020

IMAGE res/sheet.png
MODE 2
COLOURS BLACK RED GREEN YELLOW BLUE MAGENTA CYAN WHITE
CREATE-NULA-PALETTE bin/game.pal FROM-DATA 32 1 COUNT 15

CREATE-FILE bin/fuel.bin FROM-DATA 48 56 16 12 1 DATA-ORDER LINE
CREATE-FILE bin/mantop-l.bin FROM-DATA 0 0 16 16 1 DATA-ORDER LINE
CREATE-FILE bin/mantop-r.bin FROM-DATA 16 0 16 16 1 DATA-ORDER LINE

CREATE-FILE bin/manlegs-l1.bin FROM-DATA 0 16 16 8 1 DATA-ORDER LINE
CREATE-FILE bin/manlegs-l2.bin FROM-DATA 16 16 16 8 1 DATA-ORDER LINE
CREATE-FILE bin/manlegs-l3.bin FROM-DATA 32 16 16 8 1 DATA-ORDER LINE
CREATE-FILE bin/manlegs-l4.bin FROM-DATA 48 16 16 8 1 DATA-ORDER LINE
CREATE-FILE bin/manlegs-l5.bin FROM-DATA 64 16 16 8 1 DATA-ORDER LINE
CREATE-FILE bin/manlegs-l6.bin FROM-DATA 80 16 16 8 1 DATA-ORDER LINE

CREATE-FILE bin/manlegs-r1.bin FROM-DATA 96 16 16 8 1 DATA-ORDER LINE
CREATE-FILE bin/manlegs-r2.bin FROM-DATA 112 16 16 8 1 DATA-ORDER LINE
CREATE-FILE bin/manlegs-r3.bin FROM-DATA 128 16 16 8 1 DATA-ORDER LINE
CREATE-FILE bin/manlegs-r4.bin FROM-DATA 144 16 16 8 1 DATA-ORDER LINE
CREATE-FILE bin/manlegs-r5.bin FROM-DATA 160 16 16 8 1 DATA-ORDER LINE
CREATE-FILE bin/manlegs-r6.bin FROM-DATA 176 16 16 8 1 DATA-ORDER LINE

CREATE-FILE bin/platform.bin FROM-DATA 0 40 8 8 3 DATA-ORDER BLOCK
CREATE-FILE bin/items.bin FROM-DATA 0 88 16 12 5 DATA-ORDER LINE
CREATE-FILE bin/flames.bin FROM-DATA 24 40 16 16 2 DATA-ORDER LINE
CREATE-FILE bin/explode.bin FROM-DATA 0 104 16 16 8 DATA-ORDER LINE

; Title

; CREATE-FILE bin/logo.bin FROM-DATA 0 128 128 32 1 DATA-ORDER LINE

; The aliens are stored as 2bpp, so we write them out as mode 1,
; then reorder prior to patching them into the game

MODE 1
COLOURS BLACK RED GREEN BLUE
CREATE-NULA-PALETTE bin/aliens.pal FROM-DATA 32 3 COUNT 4
CREATE-FILE bin/alien1.bin FROM-DATA 0 120 16 16 1 DATA-ORDER LINE
CREATE-FILE bin/alien2.bin FROM-DATA 48 120 16 16 1 DATA-ORDER LINE